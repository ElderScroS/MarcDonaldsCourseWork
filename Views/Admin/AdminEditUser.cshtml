@model User

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/css/admin/admin-edit-user.css" rel="stylesheet" asp-append-version="true"/>
        <link href="~/css/admin/admin-main.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
        <title>Edit User</title>
    </head>
    <body>
        <partial name="~/Views/Shared/Navbars/_AdminNavbar.cshtml"/>

        <div class="user-details-container">
            <h1 class="user-details-title">Edit User</h1>
            <form asp-controller="Admin" asp-action="EditUser" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" asp-for="Name" value="@Model.Name"/>
                </div>
                <div class="form-group">
                    <label>Surname</label>
                    <input type="text" asp-for="Surname" value="@Model.Surname" />
                </div>
                <div class="form-group">
                    <label>MiddleName</label>
                    <input type="text" asp-for="MiddleName" value="@Model.MiddleName" />
                </div>
                <div class="form-group">
                    <label>Age</label>
                    <input type="number" asp-for="Age" value="@Model.Age" />
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="tel" asp-for="PhoneNumber" value="@Model.PhoneNumber" />
                </div>
                <input type="hidden" asp-for="Email" value="@Model.Email" />
                <button type="submit" class="save-button">Save Changes</button>
            </form>
        </div>
    </body>
</html>
