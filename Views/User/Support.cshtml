@{
    ViewData["Title"] = "Support";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Support - MarcDonalds</title>
    <link rel="stylesheet" href="~/css/user/support.css" />
    <link rel="stylesheet" href="~/css/user/support-modal.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body>
    <partial name="~/Views/Shared/Navbars/_Navbar.cshtml" />

    <section class="support-section fade-in">
        <h1>Need Support?</h1>
        <p class="subtitle">Use this form when the chat is unavailable or in critical situations.</p>

        <form id="supportForm" class="support-form">
            <div class="form-group">
                <label for="name">Name Surname</label>
                <input type="text" id="name" placeholder="Enter your full name" required />
            </div>

            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" placeholder="What is your message about?" required />
            </div>

            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" rows="5" placeholder="Describe your issue..." required></textarea>
            </div>

            <button type="submit" class="submit-btn">Send Message</button>
        </form>
    </section>

    <div class="modal-overlay" id="successModal">
        <div class="modal-content">
            <h2>Message Sent!</h2>
            <p>Weâ€™ll contact you within 24 hours.</p>
            <button class="modal-close" onclick="$('#successModal').fadeOut();">Close</button>
        </div>
    </div>

    <script>
        $(document).ready(function () {

            $('#successModal').hide();
            $('#supportForm').on('submit', function (e) {
                e.preventDefault();

                const data = {
                    name: $('#name').val(),
                    subject: $('#subject').val(),
                    message: $('#message').val()
                };

                $.ajax({
                    url: '/User/SendSupportMessage',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function () {
                        $('#supportForm')[0].reset();

                        const successModal = $('#successModal');
                        successModal.css('display', 'flex');

                        const modalContent = successModal.find('.modal-content');
                        modalContent.css('animation', 'none');
                        modalContent[0].offsetHeight;
                        modalContent.css('animation', 'popIn 0.3s ease forwards');
                    },
                    error: function () {
                        alert('Something went wrong. Please try again later.');
                    }
                });
            });
        
        });
    </script>

    <partial name="~/Views/Shared/Sections/_Footer.cshtml" />
</body>
</html>
